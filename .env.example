# ===========================================
# YUNA-System Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# REQUIRED: Telegram Bot Configuration
# ------------------------------------------

# Your Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Your Telegram User ID (get from @userinfobot)
TELEGRAM_CHAT_ID=123456789

# ------------------------------------------
# REQUIRED: Database Configuration
# ------------------------------------------

# Path where the SQLite database is stored
# For Docker: use /data/yuna.db (mounted volume for persistence)
# For local: use absolute path like /path/to/data/yuna.db
DATABASE_PATH=/data/yuna.db

# ------------------------------------------
# REQUIRED: Download Folders Configuration
# ------------------------------------------

# Separate folders for each media type
# For Docker: use /downloads/* (mounted volumes)
# For local: use absolute paths

# Anime download folder
ANIME_FOLDER=/downloads/anime

# Series TV download folder (StreamingCommunity)
SERIES_FOLDER=/downloads/series

# Movies download folder (StreamingCommunity)
MOVIES_FOLDER=/downloads/movies

# Legacy: single destination folder (deprecated, use folders above)
# DESTINATION_FOLDER=/downloads

# ------------------------------------------
# OPTIONAL: Update Settings
# ------------------------------------------

# Time between episode checks in seconds (default: 3600 = 1 hour)
UPDATE_TIME=3600

# ------------------------------------------
# OPTIONAL: Jellyfin Integration
# ------------------------------------------

# Jellyfin server URL (leave empty to disable)
JELLYFIN_URL=

# Jellyfin API Key (get from Dashboard > API Keys)
JELLYFIN_API_KEY=

# ------------------------------------------
# OPTIONAL: StreamingCommunity Configuration
# ------------------------------------------

# StreamingCommunity base URL (auto-detected if empty)
# BASE_URL_SC=https://streamingcommunity.example
