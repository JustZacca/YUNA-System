# ===========================================
# YUNA-System Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# REQUIRED: Telegram Bot Configuration
# ------------------------------------------

# Your Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Your Telegram User ID (get from @userinfobot)
TELEGRAM_CHAT_ID=123456789

# ------------------------------------------
# REQUIRED: Download Configuration
# ------------------------------------------

# Path where anime episodes will be downloaded
# For Docker: use /downloads (mounted volume)
# For local: use absolute path like /path/to/your/anime
DESTINATION_FOLDER=/downloads

# ------------------------------------------
# OPTIONAL: Update Settings
# ------------------------------------------

# Time between episode checks in seconds (default: 3600 = 1 hour)
UPDATE_TIME=3600

# ------------------------------------------
# OPTIONAL: Jellyfin Integration
# ------------------------------------------

# Jellyfin server URL (leave empty to disable)
JELLYFIN_URL=

# Jellyfin API Key (get from Dashboard > API Keys)
JELLYFIN_API_KEY=
